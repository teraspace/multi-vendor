<% cache [base_cache_key, @vendor, 'header'] do %>
  <div class="py-md-3 text-uppercase taxon-title">
    <%= @vendor.name %>
  </div>
  
  <% unless @vendor.about_us.blank? %>
    <div class="py-3 py-md-0 taxon-description"><%= @vendor.about_us %></div>
  <% end %>

  <% if @vendor.image&.attachment %>
    <div class="d-none d-md-block pt-4 taxon-icon">
      <%= lazy_image(
        src: main_app.url_for(@vendor.image.attachment),
        alt: @vendor.name,
        width: 1110,
        height: 300,
        class: 'w-100'
      ) %>
    </div>
  <% end %>
<% end %>
